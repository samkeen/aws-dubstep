{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "A simple stack that launches a single instance. Ubuntu Server 14.04 LTS Marketplace",
  "Mappings" : {
    "RegionMap" : {
      "us-east-1" : { "64" : "ami-4c7a3924" },
      "us-west-1" : { "64" : "ami-17471c27" },
      "us-west-2" : { "64" : "ami-84bba3c1" },
      "eu-west-1" : { "64" : "ami-f1810f86" },
      "eu-central-1" : { "64" : "ami-b2b587af" },
      "ap-southeast-1" : { "64" : "ami-bac1ebe8" },
      "ap-southeast-2" : { "64" : "ami-e3eb9fd9" },
      "ap-northeast-1" : { "64" : "ami-bebda6bf" },
      "sa-east-1" : { "64" : "ami-53f14e4e" }
    }
  },
  "Resources": {
    "Ec2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId" : { "Fn::FindInMap" : [ "RegionMap", { "Ref" : "AWS::Region" }, "64"]},
        "InstanceType": "t1.micro",
        "Tags": [
          {"Key": "owner", "Value": "email-name@"},
          {"Key": "role", "Value": "test-cf-instance"}
        ]
      }
    }
  }
}